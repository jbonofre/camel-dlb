<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <bean id="dynamicLoadBalancer" class="org.apache.camel.dlb.DynamicLoadBalancer">
        <!-- <property name="threshold" value="100"/> -->
    </bean>

    <camelContext xmlns="http://camel.apache.org/schema/blueprint">

        <route id="dlb">
            <from uri="cxf://http://0.0.0.0:9091/service/dlb?dataFormat=MESSAGE"/>
            <loadBalance ref="dynamicLoadBalancer"/>
        </route>

        <route id="nodeA" autoStartup="false">
            <from uri="vm:node1"/>
            <from uri="cxf://http://0.0.0.0:9091/service/nodeA?dataFormat=MESSAGE"/>
            <setBody>
                <constant>NODE A</constant>
            </setBody>
            <to uri="stream:out"/>
        </route>

        <route id="nodeB" autoStartup="false">
            <from uri="vm:node2"/>
            <setBody>
                <constant>NODE B</constant>
            </setBody>
            <to uri="stream:out"/>
        </route>

        <route id="nodeC" autoStartup="false">
            <from uri="vm:node3"/>
            <setBody>
                <constant>NODE C</constant>
            </setBody>
            <to uri="stream:out"/>
        </route>

    </camelContext>

</blueprint>